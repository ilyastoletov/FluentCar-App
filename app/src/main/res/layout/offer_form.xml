<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/cost_of_trip_editText_passenger"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:padding="7dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:inputType="number"
                android:focusableInTouchMode="true"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Цена поездки" />

            <EditText
                android:id="@+id/human_in_car_limit_passenger"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:hint="Кол-во пассажиров"
                android:textColorHint="@android:color/darker_gray"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:inputType="number"
                android:focusableInTouchMode="true"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:background="@drawable/custom_input" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/done_offer_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="@color/brand_color_dark"
            app:cardCornerRadius="10dp"
            android:elevation="0dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/baseline_done_24"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>